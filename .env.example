#===========================================
# APPLICATION
#===========================================
APP_NAME="MonEpice&Riz"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Africa/Abidjan
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

#===========================================
# LOGGING
#===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#===========================================
# SUPABASE DATABASE
#===========================================
DB_CONNECTION=pgsql
DATABASE_URL=
DB_HOST=
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=
DB_SCHEMA=laravel

# Supabase Services
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
SUPABASE_STORAGE_BUCKET=products

#===========================================
# SESSIONS & CACHE
#===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=redis
CACHE_PREFIX=monepiceriz_cache

#===========================================
# QUEUE & BROADCAST
#===========================================
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=redis

#===========================================
# FILESYSTEM
#===========================================
FILESYSTEM_DISK=local

#===========================================
# REDIS (Cache & Queue)
#===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#===========================================
# MAIL
#===========================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@monepiceriz.com"
MAIL_FROM_NAME="${APP_NAME}"

#===========================================
# CINETPAY PAYMENT
#===========================================
CINETPAY_API_KEY=
CINETPAY_SITE_ID=
CINETPAY_SECRET_KEY=
CINETPAY_MODE=TEST
CINETPAY_NOTIFY_URL="${APP_URL}/api/webhooks/cinetpay"
CINETPAY_RETURN_URL="${APP_URL}/payment/return"
CINETPAY_CANCEL_URL="${APP_URL}/payment/cancel"

#===========================================
# YANGO DELIVERY
#===========================================
YANGO_API_KEY=
YANGO_API_URL=
YANGO_WEBHOOK_SECRET=
YANGO_MIN_ORDER_AMOUNT=3000
YANGO_BASE_DELIVERY_FEE=1000
YANGO_DISTANCE_RATE=200

#===========================================
# SECURITY
#===========================================
BCRYPT_ROUNDS=12
ENCRYPT_CUSTOMER_DATA=true
ENCRYPT_PAYMENT_DATA=true
SESSION_SECURE_COOKIE=false
RATE_LIMIT_PER_MINUTE=60

#===========================================
# SHOP CONFIGURATION
#===========================================
SHOP_NAME="MonEpice&Riz"
SHOP_CURRENCY="CFA"
SHOP_TAX_RATE=0
SHOP_MIN_ORDER_AMOUNT=3000
SHOP_MAX_WEIGHT_PER_ORDER=50
SHOP_DEFAULT_COUNTRY="CI"
SHOP_DEFAULT_CITY="Abidjan"

#===========================================
# FRONTEND
#===========================================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

#===========================================
# AWS (Optional - for future use)
#===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-3
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#===========================================
# PUSHER (Optional - for future real-time features)
#===========================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=eu

#===========================================
# MAINTENANCE MODE
#===========================================
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

#===========================================
# MISC
#===========================================
PHP_CLI_SERVER_WORKERS=4
MEMCACHED_HOST=127.0.0.1