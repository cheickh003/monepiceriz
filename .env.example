#===========================================
# MonEpice&Riz - Configuration Example
# 
# Copy this file to .env and update with your values
# Documentation: docs/structure.md#72-variables-denvironnement
#===========================================

#===========================================
# APPLICATION
#===========================================
APP_NAME="MonEpice&Riz"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=

#===========================================
# SUPABASE DATABASE
# Get credentials from: https://app.supabase.com/project/[project-ref]/settings/database
#===========================================
DB_CONNECTION=pgsql
DATABASE_URL=postgres://postgres.[project-ref]:[password]@[region].pooler.supabase.com:5432/postgres
DB_HOST=db.[project-ref].supabase.co
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=
DB_SCHEMA=laravel

# Supabase Services
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
SUPABASE_STORAGE_BUCKET=products
SUPABASE_USE_POOLER=true
SUPABASE_POOL_MODE=session

#===========================================
# REDIS (Optional for local dev)
#===========================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#===========================================
# SESSION & CACHE
#===========================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=true

CACHE_DRIVER=file
CACHE_PREFIX=monepiceriz_cache

#===========================================
# QUEUE
#===========================================
QUEUE_CONNECTION=sync

#===========================================
# CINETPAY PAYMENT (TEST MODE)
# Get credentials from: https://www.cinetpay.com/
#===========================================
CINETPAY_API_KEY=
CINETPAY_SITE_ID=
CINETPAY_SECRET_KEY=
CINETPAY_MODE=TEST
CINETPAY_NOTIFY_URL=http://localhost:8000/api/cinetpay/notify
CINETPAY_RETURN_URL=http://localhost:8000/paiement/retour
CINETPAY_CANCEL_URL=http://localhost:8000/paiement/annulation
CINETPAY_CURRENCY=XOF

#===========================================
# YANGO DELIVERY
#===========================================
YANGO_API_KEY=
YANGO_API_URL=https://api.yango.com/v1
YANGO_WEBHOOK_SECRET=
YANGO_MIN_ORDER_AMOUNT=3000

#===========================================
# SECURITY
#===========================================
BCRYPT_ROUNDS=10
SECURE_COOKIES=false
TRUSTED_PROXIES=

#===========================================
# MONITORING & LOGS
#===========================================
LOG_CHANNEL=daily
LOG_LEVEL=debug

#===========================================
# MAIL (Local development - Mailtrap)
#===========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@monepiceriz.local
MAIL_FROM_NAME="${APP_NAME}"